{
	"manifest_version": 2,
	"name": "__MSG_appName__",
	"description": "__MSG_appDesc__",
	"short_name": "__MSG_appDescShort__",
	"default_locale": "en",
	"version": "1.1.3",
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://stats.g.doubleclick.net; object-src 'self'", 
	"permissions": [
		"tabs", 
		"storage",
		"<all_urls>",
		"chrome://favicon/"
	],
		
	"browser_action": {
		"default_icon": "icon-16.png",
		"default_title" : "__MSG_defTitle__",
		"default_popup": "dialog.html"
	},
	
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	
	"icons": { 
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	}
}
